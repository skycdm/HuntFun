<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    tools:context="com.example.cdm.huntfun.activity.fragment.child.CostActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/back_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="活动费用"
            android:textColor="#000"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/back_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15sp"
            android:src="@drawable/gou"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/ttt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/top"
        android:text="开启在线支付，则表示您同意《猎趣软件支付条款》"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/ttt"
        android:background="#fff"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_activity_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="活动费用："
            android:textColor="#000"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/edt_feiyong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_activity_theme"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="请输入每人费用，默认免费"
            android:textColorHint="#ccc"
            android:textColor="#000"
            android:textSize="16sp"/>
    </RelativeLayout>
</RelativeLayout>
