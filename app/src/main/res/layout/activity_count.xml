<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cdm.huntfun.next.CountActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#17cdf5">

        <!--自定义控件-->tex<ImageView
        android:id="@+id/iv_back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/white"
        android:layout_gravity="left"
        android:paddingRight="5dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认并支付"
            android:textSize="17sp"
            android:textColor="#fff"
            android:layout_marginLeft="35dp"
            />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:background="#fff"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rel_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_count_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/zz"/>
            </RelativeLayout>

           <RelativeLayout
               android:id="@+id/rel_count2"
               android:layout_below="@id/rel_count1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/tv_yu_title"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="预约信息"
                   android:layout_marginTop="15dp"
                   android:layout_marginLeft="10dp"
                   android:textColor="#4b4949"
                   android:textSize="18sp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="体验日期"
                   android:textColor="#8b8989"
                   android:textSize="16sp"
                   android:layout_below="@id/tv_yu_title"
                   android:layout_marginTop="15dp"
                   android:layout_marginLeft="10dp"
                   />
               <TextView
                   android:id="@+id/tv_count_time"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="2016-10-10"
                   android:textColor="#8b8989"
                   android:textSize="16sp"
                   android:layout_below="@id/tv_yu_title"
                   android:layout_marginTop="15dp"
                   android:layout_marginLeft="115dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="预约数量"
                   android:textColor="#8b8989"
                   android:textSize="16sp"
                   android:layout_below="@id/tv_yu_title"
                   android:layout_marginTop="50dp"
                   android:layout_marginLeft="10dp"
                   />
               <TextView
                   android:id="@+id/tv_count"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="1"
                   android:textColor="#8b8989"
                   android:textSize="16sp"
                   android:layout_below="@id/tv_yu_title"
                   android:layout_marginTop="50dp"
                   android:layout_marginLeft="115dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="联系人"
                   android:textColor="#8b8989"
                   android:textSize="16sp"
                   android:layout_below="@id/tv_yu_title"
                   android:layout_marginTop="85dp"
                   android:layout_marginLeft="10dp"
                   />
               <TextView
                   android:id="@+id/tv_count_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="盖伦"
                   android:textColor="#8b8989"
                   android:textSize="16sp"
                   android:layout_below="@id/tv_yu_title"
                   android:layout_marginTop="85dp"
                   android:layout_marginLeft="115dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="联系电话"
                   android:textColor="#8b8989"
                   android:textSize="16sp"
                   android:layout_below="@id/tv_yu_title"
                   android:layout_marginTop="115dp"
                   android:layout_marginLeft="10dp"
                   />
               <TextView
                   android:id="@+id/tv_count_phone"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="123456789"
                   android:textColor="#8b8989"
                   android:textSize="16sp"
                   android:layout_below="@id/tv_yu_title"
                   android:layout_marginTop="115dp"
                   android:layout_marginLeft="115dp"
                   />
           </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_count3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_count2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择支付方式"
                    android:textSize="17sp"
                    android:textColor="#4b4949"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="22dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_count4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_count3"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/weixin"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="11dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textSize="19sp"
                    android:textColor="#797575"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="50dp"/>
            </RelativeLayout>
            <View
                style="@style/bg_line"
                android:id="@+id/id_prod_list_sort_line1"
                android:layout_below="@id/rel_count4"
                android:layout_marginTop="8dp"/>
            <RelativeLayout
                android:id="@+id/rel_count5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_count4"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zhifu"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="11dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付"
                    android:textSize="19sp"
                    android:textColor="#797575"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="50dp"/>
            </RelativeLayout>
            <View
                style="@style/bg_line"
                android:layout_marginTop="8dp"
                android:id="@+id/id_prod_list_sort_line2"
                android:layout_below="@id/rel_count5"/>
            <RelativeLayout
                android:id="@+id/rel_count6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_count5"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yinlian"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="11dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银联支付"
                    android:textSize="19sp"
                    android:textColor="#797575"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="50dp"/>
            </RelativeLayout>
            <View
                style="@style/bg_line"
                android:layout_marginTop="8dp"
                android:id="@+id/id_prod_list_sort_line3"
                android:layout_below="@id/rel_count6"/>


        </RelativeLayout>

    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#FFF5A606"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/tv_count_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text=" ￥ 120"
            android:layout_marginLeft="110dp"/>

        <Button
            android:id="@+id/bt_commit"
            android:background="@drawable/set_li_ji"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="立即支付"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"/>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
