<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <ImageView
            android:id="@+id/act_fm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_fm"/>
        <TextView
            android:id="@+id/tv_shu"
            android:layout_width="8dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/act_fm"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="#aacccccc"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_shu"
            android:layout_alignTop="@+id/tv_shu"
            android:layout_marginLeft="5dp"
            android:text="时间：2016年10月14日-2016年10月16日"
            android:textColor="#fff"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_shu"
            android:layout_alignBottom="@+id/tv_shu"
            android:layout_marginLeft="5dp"
            android:text="地点：重庆市，万州区"
            android:textColor="#fff"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_person_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_shu"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="报名人数：1"
            android:textColor="#fff"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/tv_shu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#f0f"
            android:text="活动进行中"
            android:textSize="12sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/activity_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_shu"
            android:layout_alignLeft="@+id/tv_shu"
            android:layout_marginBottom="5dp"
            android:text="活动名称"
            android:textSize="16sp"
            android:textColor="#fff"/>
    </RelativeLayout>
</RelativeLayout>
