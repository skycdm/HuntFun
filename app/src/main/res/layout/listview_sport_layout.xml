<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="200dp"
        android:id="@+id/listview_image"
        android:src="@mipmap/ic_launcher"
        android:paddingTop="20dp"
        android:scrollbars="none"
        android:scaleType="fitXY" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#000"
        android:gravity="center"
        android:text="姓名"
        android:visibility="gone"
        android:layout_below="@+id/listview_image"
        android:id="@+id/Uname" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="活动名称"
        android:maxLines="5"
        android:id="@+id/sportName"
        android:layout_below="@+id/listview_image"
        android:layout_toRightOf="@+id/Uname"
        android:layout_toEndOf="@+id/Uname" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/timeEnd"
        android:text="结束时间"

        android:visibility="gone"
        android:textColor="#000"
        android:layout_below="@+id/timeBegin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/timeBegin"
        android:visibility="gone"
        android:text="开始时间"
        android:maxLines="2"
        android:textColor="#000"
        android:layout_above="@+id/money"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/place"
        android:background="@drawable/editback"
        android:text="地点"
        android:visibility="gone"
        android:maxLines="2"
        android:textColor="#000"
        android:layout_below="@+id/money"
        android:layout_toRightOf="@+id/sportId"
        android:layout_toEndOf="@+id/sportId" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/num"
        android:text="人数"
        android:visibility="gone"
        android:textColor="#000"
        android:gravity="center"
        android:layout_below="@+id/timeEnd"
        android:layout_alignLeft="@+id/timeEnd"
        android:layout_alignStart="@+id/timeEnd" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/money"
        android:text="价钱"
        android:visibility="gone"
        android:textColor="#000"
        android:gravity="center"
        android:layout_below="@+id/Uname"
        android:layout_alignLeft="@+id/sportName"
        android:layout_alignStart="@+id/sportName"
        android:layout_marginTop="67dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/miaoshu"
        android:maxLines="3"
        android:text="关于活动的描述"
        android:layout_below="@+id/place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/sportId"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delect"
        android:text="删除"
        android:visibility="gone"
        android:textSize="15sp"
        android:layout_alignTop="@+id/change"
        android:layout_toRightOf="@+id/money"
        android:layout_toEndOf="@+id/money" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change"
        android:text="修改"
        android:visibility="gone"
        android:layout_below="@+id/place"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
