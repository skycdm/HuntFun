<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xu.framework.activity.AddDynamicActivity">
    <RelativeLayout
        android:background="#33CCFF"
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cancel"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="取消"/>
        <TextView
            android:id="@+id/write"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:textSize="27sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="写说说"/>
        <TextView
            android:id="@+id/publish"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
           android:layout_toRightOf="@id/write"
            android:layout_width="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="发表"/>
    </RelativeLayout>
    <EditText
        android:layout_below="@id/bar"
        android:id="@+id/writer"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/my_shape_1"
        android:hint="输入动态内容"
        android:textSize="16sp"
        />
    <ImageView
        android:id="@+id/imageUpload"
        android:layout_below="@id/writer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/upload"/>
    <TextView
        android:textColor="#000"
        android:layout_toRightOf="@id/imageUpload"
        android:layout_width="match_parent"
         android:layout_alignBottom="@id/imageUpload"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="添加图片"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
       android:layout_below="@id/imageUpload"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>
