<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context="com.example.cdm.huntfun.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/view">
        </View>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fram"
            android:background="#ccc"
            android:layout_above="@+id/view">
        </FrameLayout>
        <RadioGroup
            android:id="@+id/radio_chekc"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_below="@+id/fram"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RadioButton
                style="@style/style"
                android:id="@+id/tuijian"
                android:drawableTop="@drawable/tuijian_selector"
                android:text="推 荐"
                />
            <RadioButton
                style="@style/style"
                android:checked="true"
                android:id="@+id/shouye"
                android:drawableTop="@drawable/home_selector"
                android:text="首 页"
                />
            <RadioButton
                style="@style/style"
                android:id="@+id/xiaoxi"
                android:drawableTop="@drawable/xiaoxi_selector"
                android:text="消 息"
                />
            <RadioButton
                style="@style/style"
                android:id="@+id/mine"
                android:drawableTop="@drawable/mine_selector"
                android:text="我 的"
                />
        </RadioGroup>
    </RelativeLayout>

    <ListView
        android:id="@+id/list_view_drawer"
        android:visibility="visible"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#fff"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" >
    </ListView>
</android.support.v4.widget.DrawerLayout>
