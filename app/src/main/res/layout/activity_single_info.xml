<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cdm.huntfun.MineActivity.SingleInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/img"
                />
            <com.example.cdm.huntfun.ImagView.ImagView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"
                android:layout_below="@+id/img"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/headimg" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:id="@+id/name"
                android:textSize="15sp"
                android:layout_alignBottom="@+id/headimg"
                android:layout_toRightOf="@+id/headimg"
                android:layout_toEndOf="@+id/headimg" />
            <View
                android:layout_width="match_parent"
                android:layout_below="@+id/endtime"
                android:background="#000"
                android:layout_height="1sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="活动描述"
                android:id="@+id/miaoshu"
                android:textSize="15sp"
                android:layout_below="@+id/endtime"
                android:layout_marginTop="50dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_below="@id/money"
                android:background="#000"
                android:layout_height="1sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动名"
                android:textSize="15sp"
                android:id="@+id/sportname"
                android:layout_below="@+id/money"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/num"
                android:text="人数"
                android:textSize="15sp"
                android:layout_marginRight="98dp"
                android:layout_marginEnd="98dp"
                android:layout_alignTop="@+id/name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/money"
                android:text="单价"
                android:textSize="15sp"
                android:layout_below="@+id/name"
                android:layout_alignLeft="@+id/num"
                android:layout_alignStart="@+id/num" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间"
                android:id="@+id/begintime"
                android:layout_marginTop="10sp"
                android:textSize="15sp"
                android:layout_below="@+id/sportname"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束时间"
                android:id="@+id/endtime"
                android:layout_marginTop="10sp"
                android:textSize="15sp"
                android:layout_below="@+id/begintime"
                />
            <LinearLayout
                android:animateLayoutChanges="true"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/miaoshu"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/change"
                    android:text="修改"
                    android:textSize="20sp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quxiao"
                    android:text="取消"
                    android:textSize="20sp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
