<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    tools:context="com.example.cdm.huntfun.MineActivity.ChangePsw">
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="123"
        android:layout_centerHorizontal="true"
        android:id="@+id/old_name"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/old_psw"
        android:hint="输入旧密码"
        android:layout_below="@+id/old_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:password="true"
        android:id="@+id/new_psw"
        android:hint="输入新密码"
        android:layout_below="@+id/old_psw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:password="true"
        android:id="@+id/new_psw_again"
        android:hint="再次输入新密"
        android:layout_below="@+id/new_psw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:id="@+id/newName_upload"
        android:layout_alignTop="@+id/newName_back"
        android:layout_toLeftOf="@+id/old_name"
        android:layout_toStartOf="@+id/old_name" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newName_back"
        android:text="取消"
        android:layout_below="@+id/old_psw"
        android:layout_toRightOf="@+id/old_name"
        android:layout_toEndOf="@+id/old_name"
        android:layout_marginTop="135dp" />

</RelativeLayout>
