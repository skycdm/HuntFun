<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.cdm.huntfun.MineActivity.SystemSet">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/view2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/frameLayout">
        <RadioGroup
            android:id="@+id/radio_check_collection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_below="@+id/fram"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/fanhui"
                android:drawableLeft="@drawable/nav_back"
                android:text="返回"
                android:button="@null"
                android:textColor="#000"
                android:textSize="20dp"
                 />
        </RadioGroup>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view2"
        android:id="@+id/frameLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/chang_name"
                android:text="修改名称"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:drawableRight="@drawable/qianjin"
                />
            <TextView
                android:id="@+id/go_head"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="设置密码"
                android:clickable="true"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/qianjin"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/chang_tuisong"
                android:text="推送设置"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:drawableRight="@drawable/qianjin"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/change_social_links"
                android:text="社交链接设置"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:drawableRight="@drawable/qianjin"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/think_send"
                android:text="意见反馈"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:drawableRight="@drawable/qianjin"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/tuichu"
                android:text="退出"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:drawableRight="@drawable/qianjin"
                />
        </LinearLayout>

    </FrameLayout>
</RelativeLayout>
